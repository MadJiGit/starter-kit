{% extends 'base.html.twig' %}

{% block title %}{{ 'registration.title'|trans }}{% endblock %}

{% block body %}
    <div class="login-container">
        <h2>{{ 'registration.title'|trans }}</h2>

        <form method="post">
            <div class="form-group">
                <label for="inputEmail">{{ 'registration.email'|trans }}</label>
                <input type="email" name="email" id="inputEmail" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="inputUsername">{{ 'registration.username'|trans }}</label>
                <input type="text" name="username" id="inputUsername" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="inputPassword">{{ 'registration.password'|trans }}</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>
            </div>

            <button type="submit" class="btn btn-primary">{{ 'registration.submit'|trans }}</button>
        </form>

        <p class="mt-3">{{ 'registration.already_have_account'|trans }} <a href="{{ path('app_login', {'_locale': app.request.locale}) }}">{{ 'registration.login_here'|trans }}</a></p>
    </div>
{% endblock %}
